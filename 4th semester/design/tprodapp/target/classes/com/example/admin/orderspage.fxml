<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.OrdersController">
  <top>
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2323cf; -fx-padding: 10;">
      <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Orders Management - Admin"/>
      <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
        <TextField fx:id="searchField" promptText="Search orders..." style="-fx-background-radius: 500;"/>
        <Button fx:id="searchButton" style="-fx-background-radius: 500;" text="Search"/>
        <Button fx:id="addOrderButton" onAction="#onAddOrderButtonClick" style="-fx-background-color: #4CAF50; -fx-background-radius: 500; -fx-text-fill: white;" text="Add Order"/>
      </HBox>
    </HBox>
  </top>

  <left>
    <VBox spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
      <Button fx:id="productsButton" onAction="#onProductsButtonClick" prefWidth="150" style="-fx-font-size: 16px; -fx-background-radius: 500;" text="Products"/>
      <Button fx:id="usersButton" onAction="#onClickShowUsers" prefWidth="150" style="-fx-font-size: 16px; -fx-background-radius: 500;" text="Employees"/>
      <VBox VBox.vgrow="ALWAYS"/>
      <Button fx:id="logoutButton" onAction="#onGotoLoginPageButtonClick" prefWidth="150" style="-fx-font-size: 16px; -fx-background-radius: 500; -fx-background-color: #ff5353; -fx-text-fill: white;" text="Logout"/>
    </VBox>
  </left>

  <center>
    <VBox spacing="10" style="-fx-padding: 20;">
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Orders List"/>
      <Button fx:id="seeInvoiceButton" mnemonicParsing="false" onAction="#onClickSeeInvoicePage" style="-fx-background-radius: 500;" text="See Invoice"/>
      <TableView fx:id="ordersTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="orderIdColumn" text="Order ID">
            <cellValueFactory>
              <PropertyValueFactory property="id"/>
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="customerNameColumn" text="Customer Name">
            <cellValueFactory>
              <PropertyValueFactory property="customerName"/>
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="productNameColumn" text="Product Name">
            <cellValueFactory>
              <PropertyValueFactory property="productName"/>
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="quantityColumn" text="Quantity">
            <cellValueFactory>
              <PropertyValueFactory property="quantity"/>
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="totalPriceColumn" text="Total Price">
            <cellValueFactory>
              <PropertyValueFactory property="totalPrice"/>
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="orderDateColumn" text="Order Date">
            <cellValueFactory>
              <PropertyValueFactory property="orderDate"/>
            </cellValueFactory>
          </TableColumn>
        </columns>
      </TableView>
    </VBox>
  </center>
</BorderPane>
