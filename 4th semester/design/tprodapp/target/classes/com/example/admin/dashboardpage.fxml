<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.admin.DashboardController">
  <top>
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2323cf; -fx-padding: 10;">
      <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Inventory Dashboard - Admin" />
      <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
        <TextField fx:id="searchField" promptText="Search products..." />
        <Button style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-background-color: #23cf23;" text="Search" />
      </HBox>
    </HBox>
  </top>

  <left>
    <VBox spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
      <Button fx:id="ordersButton" onAction="#onGotoOrderPageButtonClick" prefWidth="150" style="-fx-font-size: 16px; -fx-background-radius: 500; -fx-border-radius: 500;" text="Orders" />
      <Button fx:id="usersButton" onAction="#onClickShowUsers" prefWidth="150" style="-fx-font-size: 16px; -fx-background-radius: 500; -fx-border-radius: 500;" text="Employees" />
      <VBox VBox.vgrow="ALWAYS" />
      <Button fx:id="logoutButton" onAction="#onGotoLoginPageButtonClick" prefWidth="150" style="-fx-font-size: 16px; -fx-background-radius: 500; -fx-border-radius: 500;" text="Logout" />
    </VBox>
  </left>

  <center>
    <VBox spacing="10" style="-fx-padding: 20;">
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Product List" />
      <HBox alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="addProductButtonPage" onAction="#onGotoAddProductButtonClick" style="-fx-background-color: #2323cf; -fx-background-radius: 500; -fx-border-radius: 500;" text="Add New Product" textFill="#e7e7ee" />
        <Button fx:id="deleteProductButton" style="-fx-background-color: #ff3a6a; -fx-background-radius: 500; -fx-border-radius: 500;" text="Delete Selected" textFill="#f8e0e0" />
      </HBox>
      <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="idColumn" text="Product ID">
            <cellValueFactory>
              <PropertyValueFactory property="id" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="nameColumn" text="Name">
            <cellValueFactory>
              <PropertyValueFactory property="name" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="categoryColumn" text="Category">
            <cellValueFactory>
              <PropertyValueFactory property="category" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="priceColumn" text="Price">
            <cellValueFactory>
              <PropertyValueFactory property="price" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="quantityColumn" text="Quantity">
            <cellValueFactory>
              <PropertyValueFactory property="quantity" />
            </cellValueFactory>
          </TableColumn>
        </columns>
      </TableView>
    </VBox>
  </center>
</BorderPane>
