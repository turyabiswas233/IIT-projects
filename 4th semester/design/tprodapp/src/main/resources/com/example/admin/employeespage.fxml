<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.admin.UsersController">
  <top>
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2323cf; -fx-padding: 10;">
      <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Inventory Dashboard - Admin" />
      <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
        <TextField fx:id="searchField" promptText="Search users..." />
        <Button style="-fx-background-radius: 500; -fx-border-radius: 500; -fx-background-color: #23cf23;" text="Search" />
      </HBox>
    </HBox>
  </top>

  <left>
    <VBox spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
      <Button fx:id="productsButton" onAction="#onGotoDashboardButtonClick" prefWidth="150" style="-fx-font-size: 16px;-fx-background-radius: 500; -fx-border-radius: 500;" text="Products" />
      <Button fx:id="ordersButton" onAction="#onGotoOrderPageButtonClick" prefWidth="150" style="-fx-font-size: 16px;-fx-background-radius: 500; -fx-border-radius: 500;" text="Orders" />
      <VBox VBox.vgrow="ALWAYS" />
      <Button fx:id="logoutButton" onAction="#onGotoLoginPageButtonClick" prefWidth="150" style="-fx-font-size: 16px;-fx-background-radius: 500; -fx-border-radius: 500;" text="Logout" />
    </VBox>
  </left>

  <center>
    <VBox spacing="10" style="-fx-padding: 20;">
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Employees List" />
         <HBox alignment="CENTER_LEFT" prefHeight="16.0" prefWidth="335.0">
            <children>
               <Button fx:id="addEmployeeButton" onAction="#onGotoAddEmployeeButtonClick" mnemonicParsing="false" style="-fx-background-color: #2323cf;" text="Add Employee" textFill="#ebecf0" />
            </children>
            <padding>
               <Insets bottom="5.0" top="5.0" />
            </padding>
         </HBox>
      <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="idColumn" text="User ID">
            <cellValueFactory>
              <PropertyValueFactory property="id" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="nameColumn" text="Name">
            <cellValueFactory>
              <PropertyValueFactory property="name" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="emailColumn" text="Email">
            <cellValueFactory>
              <PropertyValueFactory property="email" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="phoneColumn" text="Phone">
            <cellValueFactory>
              <PropertyValueFactory property="phone" />
            </cellValueFactory>
          </TableColumn>
        </columns>
      </TableView>
    </VBox>
  </center>
</BorderPane>
